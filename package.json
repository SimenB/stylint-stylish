{
  "name": "stylint-stylish",
  "version": "0.0.0-development",
  "description": "A stylish reporter for Stylint, heavily inspired by jshint-stylish",
  "main": "index.js",
  "files": [
    "index.js"
  ],
  "scripts": {
    "clean": "del-cli coverage/ index.js",
    "compile": "babel stylish.js -o index.js",
    "cover": "jest --coverage",
    "lint": "eslint .",
    "pretravis": "npm run lint",
    "precover": "npm run clean",
    "prepublish": "not-in-install && npm run compile || in-install",
    "postpublish": "git push --follow-tags",
    "pretest": "npm run lint",
    "test": "jest",
    "travis": "npm run cover"
  },
  "repository": "SimenB/stylint-stylish",
  "keywords": [
    "lint",
    "reporter",
    "stylint",
    "stylint-reporter",
    "stylish",
    "stylus"
  ],
  "author": "Simen Bekkhus <sbekkhus91@gmail.com>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/SimenB/stylint-stylish/issues"
  },
  "homepage": "https://github.com/SimenB/stylint-stylish#readme",
  "dependencies": {
    "chalk": "^2.0.1",
    "lodash.isnumber": "^3.0.3",
    "log-symbols": "^2.0.0",
    "path-is-absolute": "^1.0.1",
    "text-table": "^0.2.0"
  },
  "devDependencies": {
    "babel-cli": "^6.18.0",
    "babel-plugin-add-module-exports": "^0.2.1",
    "babel-plugin-transform-es2015-arrow-functions": "^6.8.0",
    "babel-plugin-transform-es2015-block-scoping": "^6.18.0",
    "babel-plugin-transform-es2015-destructuring": "^6.19.0",
    "babel-plugin-transform-es2015-modules-commonjs": "^6.18.0",
    "babel-plugin-transform-es2015-shorthand-properties": "^6.18.0",
    "babel-plugin-transform-es2015-template-literals": "^6.8.0",
    "babel-register": "^6.18.0",
    "codeclimate-test-reporter": "^0.5.0",
    "coveralls": "^3.0.0",
    "del-cli": "^1.0.0",
    "eslint": "^4.3.0",
    "eslint-config-simenb-base": "^14.0.0",
    "in-publish": "^2.0.0",
    "jest": "^22.1.4",
    "lodash.clonedeep": "^4.5.0",
    "prettier": "^1.4.0",
    "semantic-release": "^12.2.2",
    "strip-ansi": "^4.0.0",
    "stylint": "^1.5.9",
    "travis-deploy-once": "^4.3.2"
  },
  "peerDependencies": {
    "stylint": "1.x"
  },
  "engines": {
    "node": ">=4"
  },
  "jest": {
    "testEnvironment": "node",
    "coverageThreshold": {
      "global": {
        "branches": 100,
        "functions": 100,
        "lines": 100,
        "statements": 100
      }
    }
  }
}
